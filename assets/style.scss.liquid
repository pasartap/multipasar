    border-radius: 2px;

    @include transform-origin(50%, 50%);
    @include transform(rotate(180deg));
    @include transition(none);
  }

  .icon:after {
    content: "";
    width: 0;
    height: 0;
    display: block;
    position: absolute;
    top: 2px;
    left: 4px;
    background-color: transparent;    
    border-style: solid;
    border-width: 0 4px 6px 4px;
    border-color: transparent transparent $colorNeutral transparent;
    border-radius: 1px;

    @include transform-origin(50%, 50%);
    @include transform(rotate(180deg));
    @include transition(none);
  }

  .dropdown-list {
    height: auto;
    width: 100%;
    max-width: 180px;
    visibility: hidden;
    position: absolute;
    top: 85%;
    left: 0;
    overflow: initial;
