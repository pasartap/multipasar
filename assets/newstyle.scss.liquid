}
.nav-dropdown-parent{
  position: relative;
  
  &:before{
    position: absolute;
    content: '';
    top: 100%;
    left: 0;
    width: 100%;
    height: 15px;
    background: {{settings.b_scaffolding_bg}};
    opacity: 0;
  }
  &.active .nav-dropdown{
    display: block!important;
  }
  &:hover{
    .nav-dropdown{
      opacity: 1;
      visibility: visible;
    }
  }
  .nav-dropdown{
    display: block!important;
    opacity: 0;
    visibility: hidden;
    -webkit-transition: opacity 0.2s ease-in;
    -moz-transition: opacity 0.2s ease-in;
    -o-transition: opacity 0.2s ease-in;
    transition: opacity 0.2s ease-in;
  }
}
.nav-dropdown{
  margin-top: 5px;
  width: 330px;
  border: 3px solid {{settings.b_tables_border}};
  box-shadow: 2px 2px 10px 2px rgba(0,0,0,0.1);
  padding: 30px;
  position: absolute;
  right: 0;
  text-align: left;
  display: none;
  font-size: {{settings.general_font_size | plus:0}}px;
  background-color: {{settings.b_scaffolding_bg}};
  color: {{settings.b_scaffolding_color}};
  cursor: default;
  line-height: normal;
  
  &:after{
    top: -17px;
    border: solid transparent;
    content: ' ';
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
    border-color: rgba(221,221,221,0);
    border-bottom-color: {{settings.b_tables_border}};
    border-width: 7px;
    right: 17px;
  }
}
.cart-page{
  .empty{
    margin-bottom: 30px;
  }
  .cart-item{
    float: left;
    width: 100%;
    border-top: 1px solid {{settings.b_tables_border}};
    padding: 20px;
    
    &:first-child{
      border-top: 0;
    }
  }
  .subtotal{
    font-family: {{general_font}};
    display: inline;
    color: {{settings.product_price_colour}};
    font-size: {{settings.wrapper_price_size | plus:0}}px;
  }
  .cart-header{
    background-color: darken({{settings.b_scaffolding_bg}}, 8%);
    padding: 16px 20px 13px;
    display: table;
    width: 100%;
    border-radius: 3px 3px 0 0;

    .btn1,
    .btn3{
      width: 1px;
      white-space: nowrap;
      display: table-cell;
      vertical-align: middle;

      a{
        color: {{settings.b_links_colour}};
        cursor: pointer;
        display: inline-block;
        margin: 0;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        
        &:hover{
          border-bottom-color: {{settings.b_links_colour}};
        }
      }
    }
    .btn1{
      text-align: left;
    }
    .btn3{
      text-align: right;
    }
    .btn2{
      display: table-cell;
      text-align: center;
      vertical-align: middle;
      border-bottom: 1px solid transparent;
      line-height: normal;
      font-family: {{general_font}};
      
      &.title{
        text-align: left;
      }
    }
  }
  .cart-items{
    display: inline-block;
    width: 100%;
    border: 1px solid {{settings.b_tables_border}};
    border-radius: 0;
    background-color: darken({{settings.b_scaffolding_bg}}, 2%);
    margin-bottom: 30px;
    border-top: 0;
    
    .inner{position: relative;}
    .cart-left{
      float: left;
      width: 100px;
      
      a{
        display: block;
      }
      img{
        max-width: inherit;
        max-height: 100px;
      }
    }
    .cart-right{
      float: left;
      padding-left: 20px;
      
      .cart-remove{
        position: absolute;
        top: 10px;
        right: 0;
        text-decoration: none;
        text-align: center;
        height: 34px;
        width: 34px;
        line-height: 34px;
        font-size: {{settings.social_icons_size | plus:0}}px;
        background-color: {{settings.b_states_alerts_error_bg}};
        color: {{settings.b_states_alerts_error_txt}};
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        border-radius: 50%;
        -webkit-transition: .2s ease-out;
        -moz-transition: .2s ease-out;
        -o-transition: .2s ease-out;
        -ms-transition: .2s ease-out;
        transition: .2s ease-out;
        
        &:hover{
          -webkit-box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15);
          -moz-box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15);
          box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15);
        }
      }
      .product-title{
        font-size: {{settings.wrapper_title_size}}px;
        line-height: 30px;
      }
      .product-price{
        color: {{settings.product_price_colour}};
        font-size: {{settings.wrapper_price_size | plus:0}}px;
        display: inline-block;
        vertical-align: middle;
        line-height: 30px;
        
        small{
          font-size: 75%;
        }
      }
      .product-qty{
        .group-input{
          width: 50px;
          margin: 0;
          display: inline-block;
          margin-right: 10px;
          
          input{
            padding: 0!important;
          }
        }
        .btn{
          display: inline-block;
          -webkit-box-shadow: none;
          -moz-box-shadow: none;
          box-shadow: none;
          padding: 0 10px;
          background-color: transparent;
          text-transform: capitalize;
          
          &:hover{
            background-color: {{settings.btn_btn_bg_hover}};
          }
        }
      }
    }
  }
}

