{% layout settings.customer_layout %}

<div id="template" class="customer customer__reset">
    <div class="template_header">
      <h1 class="page_title">Reset Account Password</h1>
      <p class="note">Enter a new password for {{ email }}</p>
    </div>
  
  <div class="template_content">

    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <div id="password" class="clearfix large_form">
        <label class="large" for="password">Password</label>
        <input class="form-control" type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">Password Confirmation</label>
        <input class="form-control" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Reset Password" />
      </div>
    {% endform %}
  </div>
</div>
