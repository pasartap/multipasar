{% assign listing_cols = '1' %}
{% assign image_size = 'original' %}
   {% if settings.display_home-latest-blog %}
        {% if settings.display_home-latest-blog != blank %}
<div class="latest-blog">
  <div class="container">
    <div class="blog-outer-container">

      <div class="blog_inner"> {% for article in blogs.news.articles limit: 2 %}
        <div class="homepage_blog__article">
          <div class="img"> {% assign src = article.content | split: 'src="' %}
            {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'http://cdn'; | replace: 'http:http://';, 'http://'; | remove: 'https:' %} <a href="{{ article.url }}" >
            <div class="article-img1"><img src="{{ article.image.src | img_url: 'original' }}" alt="blog image"></div>
            </a> </div>
          <span class="homepage_blog__date">{{ article.published_at | date: '%A, %B %d, %Y' }}</span>
          <h3 class="homepage_blog__title"><a href="{{ article.url }}">{{ article.title | truncate:33 }}</a></h3>
          <div class="homepage_blog__content"> {{ article.content | strip_html | truncatewords: 30 }}</div>
          <a class="btn" href="{{ article.url }}">Read more</a> </div>
        {% endfor %} </div>
    </div>
  </div>
</div>
{% endif %}
  {% endif %}